<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.antonio.clientudp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="467dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="44dp">

        <TextView
            android:id="@+id/tview_log"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            tools:background="@android:color/background_dark" />

        <ImageButton
            android:id="@+id/img_btn_turnOn_pc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/if_desktop_computer_45448" />

        <ImageButton
            android:id="@+id/img_btn_turnOff_pc"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            app:srcCompat="@drawable/if_red_29_47874" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.antonio.clientudp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/client48_48"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PcActivity"
            android:label="@string/title_activity_pc"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <service android:name=".ServerUDPservice"
            android:enabled="true"
            android:exported="true"></service>
        <receiver
            android:name=".TestLocalBroadCastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.SERVICE_DATA" />
            </intent-filter>
        </receiver>
    </application>

</manifest>